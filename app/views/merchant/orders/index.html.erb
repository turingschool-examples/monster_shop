<h1>Merchant Dashboard</h1>

<h1><%= @merchant.name %></h1>

<section class='address'>
  <p><%= @merchant.address %></p>
  <p><%= @merchant.city %> <%= @merchant.state %> <%= @merchant.zip %></p>
</section>

<% @orders.each do |order| %>
  <section id='order-<%= order.id %>'>
    <p><%= link_to "Order ##{order.id}", merchant_orders_path(order) %></p>
    <p>Ordered On: <%= order.created_at %></p>
    <p>Number of Items: <%= order.num_items %></p>
    <p>Total: <%= order.grand_total %></p>
  </section>
<% end %>

<%= button_to 'Items', dashboard_items_path, method: :get %>
